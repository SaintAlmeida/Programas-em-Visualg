  algoritmo "Par ou Impar"
  var
  n: inteiro

  inicio
        escreval("Informe um número inteiro")
        leia(n)
               se(n%2=0)entao
                             escreval("O numero ",n," é PAR")
               senao
                             escreval("O numero ",n," é IMPAR")
               fimse

  fimalgoritmo
